meta {
  name: Get Ratings By Recipient
  type: http
  seq: 3
}

get {
  url: {{GATEWAY_URL}}/api/ratings/recipient/{{RECIPIENT_ID}}?page=0&limit=20
  body: none
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

script:pre-request {
  if (!{{RECIPIENT_ID}} || {{RECIPIENT_ID}} === '') {
    console.error('‚ùå RECIPIENT_ID is required');
    bru.setEnvVar('_skip', 'true');
  }
}

script:post-response {
  if (res.status === 200) {
    console.log('‚úÖ Ratings retrieved successfully');
    console.log('üìã Total ratings:', res.body.totalElements);
    console.log('üìÑ Current page:', res.body.number);
    if (res.body.content && res.body.content.length > 0) {
      console.log('‚≠ê Ratings:', res.body.content.length);
      res.body.content.forEach((rating, index) => {
        console.log(`  ${index + 1}. [${rating.authorId}] - Note: ${rating.note} - "${rating.commentaire}"`);
      });
      if (!{{RATING_ID}} || {{RATING_ID}} === '') {
        bru.setEnvVar('RATING_ID', res.body.content[0].id);
      }
    } else {
      console.log('‚≠ê No ratings found for this recipient');
    }
  } else if (res.status === 401) {
    console.error('‚ùå Unauthorized - Token may be expired or invalid');
    console.error('Response:', res.body);
  } else {
    console.error('‚ùå Failed to get ratings:', res.status, res.body);
  }
}

