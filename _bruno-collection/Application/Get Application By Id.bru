meta {
  name: Get Application By Id
  type: http
  seq: 2
}

get {
  url: {{GATEWAY_URL}}/api/applications/1
  body: none
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

script:post-response {
  if (res.status === 200) {
    console.log('✅ Application retrieved:', res.body.id);
  } else if (res.status === 404) {
    console.error('❌ Application not found');
  } else {
    console.error('❌ Failed to get application:', res.status);
  }
}
