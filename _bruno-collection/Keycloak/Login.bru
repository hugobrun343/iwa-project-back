meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{KEYCLOAK_URL}}/realms/{{KEYCLOAK_REALM}}/protocol/openid-connect/token
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  grant_type: password
  client_id: {{CLIENT_ID}}
  client_secret: {{CLIENT_SECRET}}
  username: usertest
  password: pwdtest
}

script:post-response {
  if (res.status === 200) {
    const data = res.body;
    if (data.access_token) {
      bru.setEnvVar('ACCESS_TOKEN', data.access_token);
      bru.setEnvVar('REFRESH_TOKEN', data.refresh_token || '');
      console.log('‚úÖ Token saved! Expires in', data.expires_in, 'seconds');
      console.log('üîë Access token:', data.access_token.substring(0, 50) + '...');
    } else {
      console.error('‚ùå No access token in response');
    }
  } else if (res.status === 401) {
    console.error('‚ùå Authentication failed - Invalid credentials');
    console.error('Response:', res.body);
  } else if (res.status === 400) {
    console.error('‚ùå Bad request - Check your credentials and client configuration');
    console.error('Response:', res.body);
  } else {
    console.error('‚ùå Login failed:', res.status, res.body);
  }
}
