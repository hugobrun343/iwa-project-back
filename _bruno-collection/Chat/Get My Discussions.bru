meta {
  name: Get My Discussions
  type: http
  seq: 1
}

get {
  url: {{GATEWAY_URL}}/api/me/discussions?page=0&limit=20
  body: none
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

headers {
  X-Username: {{USER_ID}}
}

script:post-response {
  if (res.status === 200) {
    console.log('âœ… Discussions retrieved successfully');
    console.log('ğŸ“‹ Total discussions:', res.body.totalElements);
    console.log('ğŸ“„ Current page:', res.body.number);
    if (res.body.content && res.body.content.length > 0) {
      console.log('ğŸ’¬ First discussion:', res.body.content[0]);
      bru.setEnvVar('DISCUSSION_ID', res.body.content[0].id);
      if (res.body.content[0].announcementId) {
        bru.setEnvVar('ANNOUNCEMENT_ID', res.body.content[0].announcementId);
      }
    } else {
      console.log('ğŸ’¬ No discussions found');
    }
  } else if (res.status === 401) {
    console.error('âŒ Unauthorized - Token may be expired or invalid');
    console.error('Response:', res.body);
  } else {
    console.error('âŒ Failed to get discussions:', res.status, res.body);
  }
}

