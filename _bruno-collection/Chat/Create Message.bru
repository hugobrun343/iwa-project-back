meta {
  name: Create Message
  type: http
  seq: 5
}

post {
  url: {{GATEWAY_URL}}/api/discussions/{{DISCUSSION_ID}}/messages
  body: json
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

headers {
  X-Username: {{USER_ID}}
}

body:json {
  {
    "content": "Hello! This is a test message from Bruno.",
    "announcementId": {{ANNOUNCEMENT_ID}},
    "recipientId": "{{RECIPIENT_ID}}"
  }
}

script:pre-request {
  // Validate required parameters
  if (!{{ANNOUNCEMENT_ID}} || {{ANNOUNCEMENT_ID}} === '') {
    console.error('‚ùå ANNOUNCEMENT_ID is required');
  }
  if (!{{RECIPIENT_ID}} || {{RECIPIENT_ID}} === '') {
    console.error('‚ùå RECIPIENT_ID is required');
  }
  // DISCUSSION_ID is optional - message creation will create discussion if needed
  if (!{{DISCUSSION_ID}} || {{DISCUSSION_ID}} === '') {
    console.log('‚ÑπÔ∏è DISCUSSION_ID is empty - discussion will be created automatically');
  }
}

script:post-response {
  if (res.status === 201) {
    console.log('‚úÖ Message created successfully');
    console.log('üí¨ Message ID:', res.body.id);
    console.log('üí¨ Discussion ID:', res.body.discussionId);
    console.log('üìù Content:', res.body.content);
    console.log('üë§ Author:', res.body.authorId);
    console.log('üìÖ Created at:', res.body.createdAt);
    // Update DISCUSSION_ID (discussion was created or already existed)
    if (res.body.discussionId) {
      bru.setEnvVar('DISCUSSION_ID', res.body.discussionId);
      console.log('üíæ DISCUSSION_ID updated to:', res.body.discussionId);
    }
  } else if (res.status === 400) {
    console.error('‚ùå Bad request - Missing announcementId or recipientId to create discussion');
    console.error('Response:', res.body);
  } else if (res.status === 401) {
    console.error('‚ùå Unauthorized - Token may be expired or invalid');
    console.error('Response:', res.body);
  } else if (res.status === 404) {
    console.error('‚ùå Discussion not found');
    console.error('Response:', res.body);
  } else {
    console.error('‚ùå Failed to create message:', res.status, res.body);
  }
}

