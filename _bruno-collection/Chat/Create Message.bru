meta {
  name: Create Message
  type: http
  seq: 5
}

post {
  url: {{GATEWAY_URL}}/api/discussions/{{DISCUSSION_ID}}/messages
  body: json
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

headers {
  X-Username: {{USER_ID}}
}

body:json {
  {
    "content": "Hello! This is a test message from Bruno.",
    "announcementId": {{ANNOUNCEMENT_ID}},
    "recipientId": "{{RECIPIENT_ID}}"
  }
}

script:post-response {
  if (res.status === 201) {
    console.log('âœ… Message created successfully');
