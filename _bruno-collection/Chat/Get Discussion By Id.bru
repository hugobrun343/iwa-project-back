meta {
  name: Get Discussion By Id
  type: http
  seq: 3
}

get {
  url: {{GATEWAY_URL}}/api/discussions/{{DISCUSSION_ID}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{ACCESS_TOKEN}}
}

headers {
  X-Username: {{USER_ID}}
}

script:pre-request {
  if (!{{DISCUSSION_ID}} || {{DISCUSSION_ID}} === '') {
    console.warn('âš ï¸ DISCUSSION_ID is empty. Skipping this request.');
    console.warn('ğŸ’¡ Run "Get My Discussions" or "Get Discussion By Announcement" first.');
    bru.setEnvVar('_skip', 'true');
  }
}

script:post-response {
  if (res.status === 200) {
    if (res.body.id) {
    console.log('âœ… Discussion retrieved successfully');
    console.log('ğŸ’¬ Discussion ID:', res.body.id);
    console.log('ğŸ“¢ Announcement ID:', res.body.announcementId);
    console.log('ğŸ‘¤ Sender:', res.body.senderId);
    console.log('ğŸ‘¤ Recipient:', res.body.recipientId);
    console.log('ğŸ“… Created at:', res.body.createdAt);
    console.log('ğŸ”„ Updated at:', res.body.updatedAt);
      // Update variables if needed
      if (res.body.announcementId) {
        bru.setEnvVar('ANNOUNCEMENT_ID', res.body.announcementId);
      }
      if (res.body.recipientId) {
        bru.setEnvVar('RECIPIENT_ID', res.body.recipientId);
      }
    } else {
      console.log('â„¹ï¸ Discussion not found - returning empty discussion');
      console.log('ğŸ’¬ Discussion will be created when first message is sent');
    }
  } else if (res.status === 401) {
    console.error('âŒ Unauthorized - Token may be expired or invalid');
    console.error('Response:', res.body);
  } else if (res.status === 404) {
    console.error('âŒ Discussion not found');
    console.error('Response:', res.body);
  } else {
    console.error('âŒ Failed to get discussion:', res.status, res.body);
  }
}

